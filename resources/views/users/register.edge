<html>
    <head>
        <title> Cadastro </title>
    </head>

    <style>
        @tailwind base;
        @tailwind components;
        @tailwind utilities;
        *{margin: 0; padding: 0; box-sizing: border-box;}
        body{
            background: rgb(249,147,52);
            background: linear-gradient(90deg, rgba(249,147,52,1) 0%, rgba(204,36,36,1) 68%);
        }
        form{
            border-radius: 25px;
            background-color: white;
            max-width: 600px;
            max-height: 60%;
            padding: 20px;
            position: absolute;
            left: 50%;
            top: 50%;
            transform: translate(-50%,-50%);
        }
        form h1{
            text-align: center;
            color: darksalmon;
        }
        form input[type=text],
        form input[type=email],
        form input[type=password]{
            margin-left: -5px;
            margin-bottom: 5px;
            border-radius: 25px;
            width: 100%;
            height: 35px;
            border: 1px solid #4e3c69;
            padding-left: 10px;
            
        }

        form button[type=submit]{
            width: 100%;
            height: 30px;
            cursor: pointer;
            background-color: #3454f9;
            color: #ffffff;
            border: 0;
            border-radius: 25px;
            margin-right: -5px;
            margin-top: 5px;
        }
        form button[type=submit]:hover{
            background-color: #454545;
            color: #ffffff;
            transition: 100ms;
        }

    </style>

    <body>
        <a href='/' id="home" name="home"> Homepage </a>
        <form action="/" method="POST">
            <label for="user"><b>Nome de usu√°rio</b></label>
            <input type="text" id="username" name="username"><br>
            <label for="email"><b>E-mail</b></label>
            <input type="email" id="email" name="email"><br>
            <label for="password"><b>Senha</b></label>
            <input type="password" id="password" name="password"><br>
            <label for="repassword"><b>Repita a senha</b></label>
            <input type="password" id="password" name="repassword"><br>
            <button type="submit"><b>Enviar</b></button>
        </form>
    </body>
</html>